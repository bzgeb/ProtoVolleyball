                players[c].update();
                FlxG.collide(level, players[c]);
                FlxG.collide(players[c], ball);
            }

            if (FlxG.keys.justPressed("R")) {
                ball.y -= 50;
            }

            FlxG.collide(ball, level,  onBallLevelCollision);
        }

